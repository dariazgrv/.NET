@model IEnumerable<WebApplication2.Models.Concerts>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/style.css")
</head>

<body>


    <div class="slider">
        <img src="~/Content/slider.jpg">
    </div>
    <div class="content">
        <div class="container">
            <div class="prod-list">
                @foreach (var item in Model)
                {
                    if (item.Style.Equals("Pop"))
                    {
                        <div class="prod-row">
                        <div class="prod-row1">
                            <div class="prod-img">
                                <image class="img" src=@Html.DisplayFor(modelItem => item.Image)></image>
                            </div>
                            <div class="prod-title">
                                <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                            </div>
                            <div class="prod-location">
                                <p><strong>Locatie:</strong> @Html.DisplayFor(modelItem => item.Location)</p>
                            </div>
                            <div class="prod-price">
                                <p><strong>Pret:</strong> @Html.DisplayFor(modelItem => item.Price)</p>
                            </div>
                            <div class="prod-btn">
                                <button class="btn-style">Adauga in cos</button>
                            </div>
                        </div>
                    </div>
                    }
                }
            </div>
        </div>
    </div>
    
    <!--<div class="footer">
        <div class="container">
            <span>Copyright 2019</span>
        </div>
    </div-->

</body>

</html>